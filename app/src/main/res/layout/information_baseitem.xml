<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/information_todayattention_title_bg"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#fff"
            android:text="今日重点关注" />

        <TextView
            android:id="@+id/information_item_improtant"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/information_important_bg"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#fff"
            android:text="重要" />
    </LinearLayout>

    <TextView
        android:id="@+id/information_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:text="房地产和消费者信心把脉美国经济" />

    <include layout="@layout/information_item_time" />

    <TextView
        android:id="@+id/information_item_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="15dp"
        android:maxLines="3"
        android:text="昨日一再强调时间节点临近，白银将迎来大涨契机，并。。。昨日一再强调时间节点临近，白银将迎来大涨契机，并。。。昨日一再强调时间节点临近，白银将迎来大涨契机，并。。。" />
</LinearLayout>